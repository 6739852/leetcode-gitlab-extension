{
  "manifest_version": 3,
  "name": "LeetCode to GitHub",
  "version": "1.0",
  "description": "העלה פתרונות LeetCode אוטומטית ל-GitHub",
  "permissions": [
    "activeTab",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "LeetCode to GitHub"
  }
}